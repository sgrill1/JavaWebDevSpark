{{#partial "content"}}

    {{#if username}}
        <h1>Welcome {{username}} To Your First Java Site</h1>
    {{else}}
        <h1>Welcome To My First Java Site</h1>
        <form action="/sign-in" method="post">
            <input type="text" placeholder="What's your user name?" name="username">
            <button>Sign-In</button>
        </form>
    {{/if}}
{{/partial}}

{{> base.hbs}}
